<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".rate">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:cardBackgroundColor="@color/accent"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">



                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:id="@+id/back"
                    android:layout_margin="15dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="90dp"
                    app:cardBackgroundColor="@color/md_black_1000"
                    android:outlineAmbientShadowColor="@color/md_white_1000"
                    android:outlineSpotShadowColor="@color/md_white_1000"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:tint="@color/accent"
                        android:src="@drawable/back"
                        android:layout_margin="10dp"
                        />

                </androidx.cardview.widget.CardView>



                <com.betplay.smsattaapp.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/font"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Game Rate"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/single"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Single - Loading"
                    android:textColor="@color/font"
                    android:textSize="16sp" />


                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/doublegame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Double - Loading"
                    android:textColor="@color/font"
                    android:textSize="16sp" />


                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/singlepatti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Single Panna - Loading"
                    android:textColor="@color/font"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/doublepatti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Double Panna - Loading"
                    android:textColor="@color/font"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/tripepatti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Triple Panna - Loading"
                    android:textColor="@color/font"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/halfsangam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Half Sangam - Loading"
                    android:textColor="@color/font"
                    android:textSize="16sp"
                    android:visibility="gone" />


                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/fullsangam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@color/background"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Full Sangam - Loading"
                    android:textColor="@color/font"
                    android:textSize="16sp" />


            </LinearLayout>

        </ScrollView>



    </RelativeLayout>



</RelativeLayout>